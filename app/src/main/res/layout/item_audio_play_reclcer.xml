<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="252dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dimen_13"
        android:layout_marginTop="@dimen/dimen_11"
        android:src="@mipmap/ic_item_audio_play_is_playing" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_toRightOf="@+id/item_icon"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="@string/VideoView_error_text_invalid_progressive_playback"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_b5" />

</RelativeLayout>
